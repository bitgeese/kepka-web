---
import { ThemeProvider } from "../components/ThemeProvider";
import ThemeScript from "../components/ThemeScript.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Jakub Kepka - Fashion Designer and Creative Director based in Warsaw, Poland. Explore my latest collections, photoshoots, and fashion designs." />
    <meta name="keywords" content="Jakub Kepka, fashion designer, Warsaw, Poland, fashion collections, photoshoots, designer clothing" />
    <meta property="og:title" content={`${title} | Jakub Kepka`} />
    <meta property="og:description" content="Jakub Kepka - Fashion Designer and Creative Director based in Warsaw, Poland" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta name="twitter:card" content="summary_large_image" />
    <title>{title} | Jakub Kepka</title>
    <ThemeScript />
    <link rel="preconnect" href="https://fonts.cdnfonts.com" />
    <!-- Add font links when available -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Custom cursor styles --> 
    <style>
      * {
        cursor: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='12' cy='12' r='5' stroke='%23FF0030' stroke-width='2'/%3E%3C/svg%3E") 12 12, auto !important;
      }
      a, button, [role="button"] {
        cursor: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='12' cy='12' r='6' fill='%23FF0030'/%3E%3C/svg%3E") 12 12, pointer !important;
      }
    </style>
  </head>
  <body class="selection:bg-electric-red selection:text-white">
    <ThemeProvider client:load>
      <!-- Extremely subtle noise texture -->
      <div class="fixed inset-0 pointer-events-none bg-noise opacity-[0.005] z-[-1]"></div>
      
      <!-- Main content -->
      <main class="mx-auto relative">
        <slot />
      </main>
      
      <!-- Footer component -->
      <Footer />
    </ThemeProvider>
  </body>
</html> 