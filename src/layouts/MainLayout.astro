---
import { ThemeToggle } from "../components/ui/theme-toggle";
import { ThemeProvider } from "../components/ThemeProvider";
import ThemeScript from "../components/ThemeScript.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Jakub Kepka - Fashion Designer with Y2K/techno-inspired aesthetic, blending bold design with Polish sensibilities." />
    <title>{title} | Jakub Kepka</title>
    <ThemeScript />
    <link rel="preconnect" href="https://fonts.cdnfonts.com" />
    <!-- Add font links when available -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Custom cursor styles --> 
    <style>
      * {
        cursor: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='12' cy='12' r='5' stroke='%23FF0030' stroke-width='2'/%3E%3C/svg%3E") 12 12, auto !important;
      }
      a, button, [role="button"] {
        cursor: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='12' cy='12' r='6' fill='%23FF0030'/%3E%3C/svg%3E") 12 12, pointer !important;
      }
    </style>
  </head>
  <body class="selection:bg-electric-red selection:text-white">
    <ThemeProvider client:load>
      <!-- Techno-inspired theme toggle -->
      <div class="fixed bottom-4 right-4 z-50">
        <ThemeToggle client:load className="shadow-lg" />
      </div>
      
      <!-- Back to home button -->
      {currentPath !== "/" && (
        <div class="fixed top-4 left-4 z-50">
          <a 
            href="/" 
            class="home-button flex items-center justify-center h-10 px-4 bg-background dark:bg-black border-2 border-electric-red hover:bg-electric-red hover:text-white transition-all duration-300"
            aria-label="Back to home page"
          >
            <span class="font-display font-bold tracking-tight text-xs uppercase">HOME</span>
          </a>
        </div>
      )}
      
      <!-- Extremely subtle noise texture -->
      <div class="fixed inset-0 pointer-events-none bg-noise opacity-[0.005] z-[-1]"></div>
      
      <!-- Main content -->
      <main class="mx-auto relative">
        <slot />
      </main>
      
      <!-- Footer component -->
      <Footer />
    </ThemeProvider>
    
    <style>
      .home-button {
        box-shadow: 0 2px 0 0 var(--electric-red);
        opacity: 0.95;
        letter-spacing: 0.05em;
        transition: all 0.25s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      }
      
      .home-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 0 0 var(--electric-red);
      }
      
      @media (max-width: 640px) {
        .home-button {
          height: 8px;
          padding: 0 8px;
          font-size: 0.65rem;
        }
      }
    </style>
  </body>
</html> 