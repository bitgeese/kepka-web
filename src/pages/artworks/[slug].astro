---
import Layout from "../../layouts/layout.astro";
import directus from "../../lib/directus";
import { readItems, readItem } from "@directus/sdk";
import { getImageUrl } from "../../lib/cloudinary";

export async function getStaticPaths() {
  const artworks = await directus.request(readItems("kepka_artworks", {
    fields: ["*"],
  }));
  return artworks.map((artwork) => ({ params: { slug: artwork.slug }, props: artwork }));
}
const artwork = Astro.props;
---

<Layout title={artwork.title}>
  <main class="artwork-detail">
    <div class="artwork-image-container">
      <img 
        src={getImageUrl(artwork.cover, { width: 1200 })} 
        alt={artwork.title}
        class="artwork-cover"
        onerror="this.onerror=null; this.src=this.getAttribute('data-fallback');"
        data-fallback={getImageUrl(artwork.cover, {}, false)}
      />
    </div>
    
    <div class="artwork-info">
      <h1>{artwork.title}</h1>
      <div class="artwork-date">
        {new Date(artwork.date_created).toLocaleDateString()}
      </div>
      <div class="artwork-description">
        {artwork.description}
      </div>
    </div>
  </main>
</Layout>

<style>
  .artwork-detail {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .artwork-image-container {
    margin-bottom: 2rem;
  }
  
  .artwork-cover {
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .artwork-info {
    margin-top: 1.5rem;
  }
  
  .artwork-date {
    color: #666;
    margin-bottom: 1rem;
  }
  
  .artwork-description {
    line-height: 1.6;
    white-space: pre-line;
  }
</style>