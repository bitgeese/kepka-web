---
import Layout from "../../layouts/layout.astro";
import directus from "../../lib/directus";
import { readItems } from "@directus/sdk";
import { getImageUrl } from "../../lib/cloudinary";

const artworks = await directus.request(
  readItems("kepka_artworks", {
    fields: [
      "slug",
      "title",
      "date_created",
      "cover"
    ],
    sort: ["-date_created"],
  })
);
---

<Layout title="Artworks">
  <main>
    <h1>Artworks</h1>
    <ul class="artworks-grid">
      {
        artworks.map((artwork) => (
          <li class="artwork-card">
            <a href={`/artworks/${artwork.slug}`}>
              {artwork.cover && (
                <img 
                  src={getImageUrl(artwork.cover, { width: 400, height: 300 })} 
                  alt={artwork.title}
                  class="artwork-thumbnail"
                  onerror="this.onerror=null; this.src=this.getAttribute('data-fallback');"
                  data-fallback={getImageUrl(artwork.cover, {}, false)}
                />
              )}
              <h2>{artwork.title}</h2>
            </a>
            <span class="artwork-date">
              {new Date(artwork.date_created).toLocaleDateString()} 
            </span>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

<style>
  .artworks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    list-style: none;
    padding: 0;
  }
  
  .artwork-card {
    border-radius: 0.5rem;
    overflow: hidden;
    transition: transform 0.2s;
  }
  
  .artwork-card:hover {
    transform: translateY(-5px);
  }
  
  .artwork-thumbnail {
    width: 100%;
    aspect-ratio: 4/3;
    object-fit: cover;
  }
  
  .artwork-date {
    color: #666;
    font-size: 0.9rem;
  }
</style>