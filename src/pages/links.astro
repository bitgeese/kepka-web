---
import MainLayout from '../layouts/MainLayout.astro';
import { fetchLinks } from '../lib/directus';
import { LinkPreview } from 'astro-embed';

// Fetch all links from Directus
const links = await fetchLinks();

// Group links by type
const groupedLinks = links.reduce((acc, link) => {
  const type = link.type || 'Other';
  if (!acc[type]) {
    acc[type] = [];
  }
  acc[type].push(link);
  return acc;
}, {} as Record<string, typeof links>);

// Sort the types
const sortedTypes = Object.keys(groupedLinks).sort();
---

<MainLayout title="Press">
  <main class="bg-background py-12">
    <div class="container mx-auto px-6 lg:px-16">
      <h1 class="text-6xl font-display font-bold tracking-tighter mb-12 text-foreground uppercase">
        Press
      </h1>
      
      <p class="text-lg mb-16 max-w-3xl text-foreground">
        A curated collection of interesting articles, videos, and resources related to fashion, photography, and art.
      </p>

      {sortedTypes.length > 0 ? (
        sortedTypes.map((type, typeIndex) => (
          <section class="mb-32" style={`margin-left: ${typeIndex % 2 ? '0' : '5%'}`}>
            <h2 class="text-3xl font-display font-bold tracking-tight mb-8 text-foreground uppercase">
              {type}
            </h2>
            
            <div class="space-y-20">
              {groupedLinks[type].map((link, linkIndex) => (
                <div class="overflow-hidden hover:bg-electric-red hover:text-black transition-all duration-300 group">
                  <div class="p-8 grid" style={`grid-template-columns: ${linkIndex % 2 ? '2fr 1fr' : '1fr 2fr'}; gap: 2rem;`}>
                    <p class="text-xl text-foreground group-hover:text-black mb-4">{link.description}</p>
                    
                    <div class="overflow-visible noise-container">
                      <div class="link-preview-wrapper transform transition-all duration-500 group-hover:scale-[1.03]">
                        <LinkPreview id={link.url} />
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </section>
        ))
      ) : (
        <div class="py-16 text-center border-2 border-electric-red">
          <p class="text-xl text-foreground">No links available at the moment.</p>
        </div>
      )}
    </div>
  </main>
</MainLayout>

<style is:global>
  /* Custom styling for the link preview */
  .link-preview {
    max-width: none !important;
    width: 100% !important;
    border: none !important;
    background-color: transparent !important;
    color: var(--foreground) !important;
    position: relative;
    z-index: 1;
    padding: 0 !important;
  }
  
  .link-preview a {
    color: var(--foreground) !important;
    text-decoration: none !important;
    transition: all 0.3s ease;
    display: block !important;
    width: 100% !important;
    padding: 0 !important;
  }
  
  .group:hover .link-preview a {
    color: black !important;
  }
  
  .link-preview img {
    object-fit: cover;
    width: 100%;
    border-radius: 0 !important;
    max-height: none !important;
    filter: grayscale(60%) contrast(120%);
    transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
  }
  
  .group:hover .link-preview img {
    filter: grayscale(0%) contrast(100%);
  }
  
  .link-preview-wrapper {
    width: 100%;
    transition: all 0.3s ease;
    position: relative;
    transform-origin: center center;
  }
  
  /* Make the description text larger and limit to 3 lines */
  .link-preview p {
    font-size: 0.875rem !important;
    margin-top: 0.5rem !important;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-family: 'Courier New', monospace !important;
    letter-spacing: -0.5px;
    line-height: 1.5 !important;
    min-height: 4em;
    padding: 0 !important;
    text-align: left !important;
  }
  
  /* Digital noise effect */
  .noise-container {
    position: relative;
    overflow: visible;
  }
  
  .noise-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 250 250' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.05;
    z-index: 2;
    pointer-events: none;
    mix-blend-mode: overlay;
    transition: opacity 0.3s ease;
  }
  
  .group:hover .noise-container::before {
    opacity: 0.1;
  }
  
  /* Digital scan lines effect */
  .noise-container::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      to bottom,
      transparent,
      transparent 1px,
      rgba(255, 255, 255, 0.05) 1px,
      rgba(255, 255, 255, 0.05) 2px
    );
    opacity: 0.3;
    z-index: 2;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }
  
  .group:hover .noise-container::after {
    opacity: 0;
  }
  
  /* Fix for embedded content in previews */
  .link-preview iframe,
  .link-preview div {
    width: 100% !important;
    max-width: 100% !important;
    margin: 0 !important;
    padding: 0 !important;
  }
  
  /* Dynamic color adjustments for dark mode */
  .dark .noise-container::after {
    background: repeating-linear-gradient(
      to bottom,
      transparent,
      transparent 1px,
      rgba(255, 255, 255, 0.05) 1px,
      rgba(255, 255, 255, 0.05) 2px
    );
  }
</style> 