---
import MainLayout from '../layouts/MainLayout.astro';
import { fetchKepka, getAssetUrl } from '../lib/directus';
import { CloudinaryImage } from '../components/ui/CloudinaryImage';

// Fetch the Kepka data to get bio_image, contact_email and phone
const kepkaData = await fetchKepka();
const bioImageUrl = kepkaData ? getAssetUrl(kepkaData.bio_image) : '';
const bioImageId = kepkaData?.bio_image || '';
const contactEmail = kepkaData?.contact_email || 'hi@kepka.co';
const phoneNumber = kepkaData?.contact_phone || '+44 7939 049940';
---

<MainLayout title="Contact">
  <div class="container mx-auto px-6 lg:px-16">
    <div class="contact-container">
      <div class="contact-grid">
        <!-- Left column with contact info -->
        <div class="left-column">
          <h1 class="title">CONTACT</h1>
          
          <a 
            href="/" 
            class="inline-flex items-center gap-2 text-sm hover:text-electric-red transition-colors mb-8"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Back to home
          </a>
          
          <div class="diagonal-slash"></div>
          
          <div class="contact-details">
            <div class="contact-item">
              <h2 class="heading">Email</h2>
              <a href={`mailto:${contactEmail}`} class="link">{contactEmail}</a>
            </div>
            
            <div class="contact-item">
              <h2 class="heading">Phone</h2>
              <a href={`tel:${phoneNumber}`} class="link">{phoneNumber}</a>
            </div>
            
            <div class="contact-item">
              <h2 class="heading">Studio</h2>
              <p class="text">London, UK</p>
            </div>
          </div>
        </div>
        
        <!-- Right column with bio image -->
        <div class="right-column">
          {bioImageId && (
            <div class="image-container">
              <CloudinaryImage 
                publicId={bioImageId} 
                alt="Jakub Kepka" 
                className="bio-image" 
                crop="fill"
                gravity="face"
                grayscale={true}
                fallback={bioImageUrl}
              />
              <div class="scan-lines"></div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Main container with full height */
  .contact-container {
    min-height: calc(100vh - 16rem);
    display: flex;
    align-items: center;
    padding: 4rem 0;
  }
  
  /* Asymmetrical grid layout */
  .contact-grid {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }
  
  /* Left column styling with strategic whitespace */
  .left-column {
    display: flex;
    flex-direction: column;
    position: relative;
  }
  
  /* Dramatic oversized headline */
  h1.title {
    font-family: 'Eurostile Extended', system-ui, sans-serif;
    font-size: clamp(5rem, 12vw, 10rem);
    font-weight: 800;
    line-height: 0.85;
    margin-bottom: 6rem;
    color: var(--foreground);
    text-transform: uppercase;
    letter-spacing: -0.05em;
    position: relative;
  }
  
  /* Diagonal slash for visual tension */
  .diagonal-slash {
    position: absolute;
    width: 150%;
    height: 1px;
    background-color: var(--electric-red);
    transform: rotate(-15deg);
    top: 50%;
    left: -25%;
    z-index: -1;
  }
  
  /* Contact details styling */
  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin-top: 2rem;
  }
  
  .contact-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .label {
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    color: var(--secondary);
    letter-spacing: 0.1em;
  }
  
  .value {
    font-family: 'Suisse Int\'l', system-ui, sans-serif;
    font-size: 1.5rem;
    color: var(--foreground);
    letter-spacing: -0.02em;
  }
  
  /* Hover effect for interactive elements */
  .hover-effect {
    position: relative;
    display: inline-block;
    transition: all 300ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .hover-effect:hover {
    color: var(--background);
    background-color: var(--electric-red);
    padding: 0 0.5rem;
    transform: translateX(0.5rem);
  }
  
  /* Right column with bio image */
  .right-column {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }
  
  /* Bio image styling */
  .image-container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }
  
  .bio-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(60%) contrast(120%);
    transition: filter 0.3s ease;
  }
  
  .image-container:hover .bio-image {
    filter: grayscale(0%) contrast(100%);
  }
  
  /* Scan lines effect */
  .scan-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      to bottom,
      transparent,
      transparent 1px,
      rgba(255, 255, 255, 0.05) 1px,
      rgba(255, 255, 255, 0.05) 2px
    );
    pointer-events: none;
    z-index: 1;
  }
  
  /* Responsive adjustments */
  @media (max-width: 1024px) {
    h1.title {
      font-size: clamp(4rem, 10vw, 8rem);
      margin-bottom: 4rem;
    }
    
    .diagonal-slash {
      width: 130%;
      left: -15%;
    }
  }
  
  @media (max-width: 768px) {
    .contact-container {
      padding: 2rem 0;
      min-height: auto;
    }
    
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    h1.title {
      font-size: clamp(3.5rem, 15vw, 6rem);
      margin-bottom: 3rem;
    }
    
    .value {
      font-size: 1.25rem;
    }
    
    .diagonal-slash {
      width: 120%;
      left: -10%;
    }
    
    .contact-details {
      gap: 2rem;
    }
    
    .right-column {
      display: block;
      margin-top: 2rem;
      height: 50vh;
      max-height: 400px;
    }
  }
  
  @media (max-width: 480px) {
    h1.title {
      font-size: 3rem;
      margin-bottom: 2rem;
    }
    
    .contact-details {
      gap: 1.5rem;
    }
    
    .contact-item {
      gap: 0.25rem;
    }
    
    .value {
      font-size: 1.125rem;
    }
    
    .right-column {
      height: 40vh;
    }
  }
</style> 